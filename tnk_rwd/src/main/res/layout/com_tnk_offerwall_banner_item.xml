<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        card_view:cardElevation="0dp"
        android:id="@+id/com_tnk_off_banner_item_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="H, 320:142"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/com_tnk_off_banner_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:layout_gravity="right"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="visible"
            android:id="@+id/com_tnk_off_banner_item_point_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/com_tnk_offerwall_banner_point_bg"
            android:backgroundTint="#80000000"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:textFontWeight="400"
            android:textSize="24dp"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/com_tnk_off_banner_item_point_unit_icon"
                style="@style/tnk_point_icon_3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2.5dp"/>

            <TextView
                android:textColor="#fff"
                android:id="@+id/com_tnk_off_banner_item_point_plus"
                style="@style/tnk_ad_detail_confirm_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="+"
                android:textFontWeight="400"
                android:textSize="14dp"
                android:textStyle="normal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:textColor="#fff"
                android:id="@+id/com_tnk_off_banner_item_point"
                style="@style/tnk_ad_detail_confirm_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1,000포인트"
                android:textFontWeight="700"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
