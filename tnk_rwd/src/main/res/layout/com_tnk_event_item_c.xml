<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cl_ad_item"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="99dp"
                app:cardElevation="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/card_ad_item_icon"
                android:layout_width="44dp"
                android:layout_height="44dp">

                <ImageView
                    android:background="@color/tnk_color_palettes_020"
                    android:id="@+id/v_ad_item_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:gravity="center"
                tools:text="1"
                style="@style/tnk_ad_list_title_2"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@drawable/com_tnk_event_a_ing_icon"
                app:layout_constraintTop_toTopOf="@+id/card_ad_item_icon"
                app:layout_constraintRight_toRightOf="@+id/card_ad_item_icon"
                android:layout_marginRight="-10dp"
                android:id="@+id/tv_ad_status_icon"
                android:textFontWeight="700"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/tnk_ad_list_title_2"
            android:maxLines="1"
            android:maxLength="6"
            android:ellipsize="end"
            tools:text="descdescdescdescdescdescdescdescdescdescdescdescdescdesc"
            android:textColor="@color/tnk_color_palettes_090"
            android:textSize="12dp"
            android:textFontWeight="500"
            android:id="@+id/tv_ad_item_desc"
            app:layout_constraintTop_toTopOf="@+id/v_ad_item_icon"
            app:layout_constraintBottom_toBottomOf="@+id/v_ad_item_icon"
            app:layout_constraintLeft_toRightOf="@+id/v_ad_item_icon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
