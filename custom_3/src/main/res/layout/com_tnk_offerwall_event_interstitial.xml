<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tnk_color_background_dim">

    <!--    https://cdn1.tnkfactory.com/fad/ci_55902_3.jpg?dt=1636373548331-->
    <ImageView
        android:id="@+id/com_tnk_off_interstitial_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@id/com_tnk_off_interstitial_bottom" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/com_tnk_off_interstitial_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/tnk_color_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/com_tnk_off_interstitial_disable_today"
            style="@style/com_tnk_off_event_disable_today_check_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:checked="false"
            android:clickable="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="오늘 다시 안보기"
            style="@style/com_tnk_offerwall_message_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/com_tnk_off_interstitial_disable_today"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:clickable="true"
            android:id="@+id/com_tnk_off_interstitial_disable_today_touch"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/com_tnk_off_interstitial_tv_close"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginRight="20dp"
            android:text="닫기"
            style="@style/tnk_clickable_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
