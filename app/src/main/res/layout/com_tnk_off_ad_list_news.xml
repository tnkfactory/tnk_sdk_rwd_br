<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/com_tnk_offerwall_item_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/com_tnk_curation_1_icon_bg"
        android:padding="0.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fff"
            app:cardBackgroundColor="#ffcccccc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/com_tnk_off_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                tools:background="#ffffffff" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/com_tnk_off_item_title"
        style="@style/text_style_list_icon_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:gravity="top|left"
        android:maxLines="1"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/com_tnk_offerwall_item_image_layout"
        tools:text="test" />

    <TextView
        android:id="@+id/com_tnk_off_item_sub_title"
        style="@style/text_style_list_icon_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textSize="14dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/com_tnk_off_item_title"
        tools:text="Test Title Test Title Test Title Test Title Test Title Test Title Test Title Test Title Test Title" />



    <LinearLayout
        android:id="@+id/com_tnk_off_detail_ll_reward"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/com_tnk_off_item_title" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/com_tnk_off_item_campaign"
                style="@style/text_style_list_icon_item_campaign"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="6dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:textSize="13dp"
                tools:text="액션형" />

            <TextView
                android:id="@+id/com_tnk_off_item_org_pnt_amt"
                style="@style/text_style_list_icon_item_org_pnt_amt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="6dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:textSize="13dp"
                tools:text="액션형" />
        </LinearLayout>

        <ImageView
            android:id="@+id/com_tnk_off_item_unit_icon"
            style="@style/img_style_list_icon_item_point_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3dp" />

        <TextView
            android:id="@+id/com_tnk_off_item_multi_reward_text"
            style="@style/text_style_list_icon_item_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="최대" />

        <TextView
            android:id="@+id/com_tnk_off_item_point"
            style="@style/text_style_list_icon_item_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="15dp"
            tools:text="7777777" />

        <TextView
            android:id="@+id/com_tnk_off_item_complete"
            style="@style/text_style_list_icon_item_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="15dp"
            tools:text="7777777" />

        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/com_tnk_off_item_unit"
            style="@style/text_style_list_icon_item_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="코인받기" />
    </LinearLayout>
    <TextView
        android:text="참여완료"
        android:id="@+id/com_tnk_off_news_complete"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="4dp"
        android:textSize="14dp"
        android:textColor="#808080"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/com_tnk_off_item_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
